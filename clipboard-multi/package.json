{
  "name": "clipboard-multi",
  "displayName": "Clipboard Manager (Activity Bar)",
  "version": "0.0.2",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.80.0"
  },
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "clipboardViewContainer",
          "title": "Clipboard",
          "icon": "images/icon.svg"
        }
      ]
    },
    "views": {
      "clipboardViewContainer": [
        {
          "id": "clipboardView",
          "name": "Clipboard History"
        }
      ]
    },
    "commands": [
      { "command": "clipboard.refresh", "title": "Refresh Clipboard History" },
      { "command": "clipboard.paste", "title": "Paste from Slot" },
      { "command": "clipboard.copy", "title": "Copy to Slot" },
      { "command": "clipboard.setSlot", "title": "Set Slot (Text)" },
      { "command": "clipboard.openSearch", "title": "Open Clipboard Search" },
      { "command": "clipboard.pin", "title": "Pin item" },
      { "command": "clipboard.unpin", "title": "Unpin item" },
      { "command": "clipboard.delete", "title": "Delete item" },
      { "command": "clipboard.undo", "title": "Undo delete" },
      { "command": "clipboard.copyAndSave", "title": "Copy and Save to Clipboard History" }
    ],
    "keybindings": [
      { "key": "ctrl+0", "command": "clipboard.copy", "when": "editorTextFocus", "args": { "slot": 0 } },
      { "key": "ctrl+1", "command": "clipboard.copy", "when": "editorTextFocus", "args": { "slot": 1 } },
      { "key": "ctrl+2", "command": "clipboard.copy", "when": "editorTextFocus", "args": { "slot": 2 } },
      { "key": "ctrl+3", "command": "clipboard.copy", "when": "editorTextFocus", "args": { "slot": 3 } },
      { "key": "ctrl+4", "command": "clipboard.copy", "when": "editorTextFocus", "args": { "slot": 4 } },
      { "key": "ctrl+5", "command": "clipboard.copy", "when": "editorTextFocus", "args": { "slot": 5 } },
      { "key": "ctrl+6", "command": "clipboard.copy", "when": "editorTextFocus", "args": { "slot": 6 } },
      { "key": "ctrl+7", "command": "clipboard.copy", "when": "editorTextFocus", "args": { "slot": 7 } },
      { "key": "ctrl+8", "command": "clipboard.copy", "when": "editorTextFocus", "args": { "slot": 8 } },
      { "key": "ctrl+9", "command": "clipboard.copy", "when": "editorTextFocus", "args": { "slot": 9 } },
      { "key": "alt+0", "command": "clipboard.paste", "when": "editorTextFocus", "args": { "slot": 0 } },
      { "key": "alt+1", "command": "clipboard.paste", "when": "editorTextFocus", "args": { "slot": 1 } },
      { "key": "alt+2", "command": "clipboard.paste", "when": "editorTextFocus", "args": { "slot": 2 } },
      { "key": "alt+3", "command": "clipboard.paste", "when": "editorTextFocus", "args": { "slot": 3 } },
      { "key": "alt+4", "command": "clipboard.paste", "when": "editorTextFocus", "args": { "slot": 4 } },
      { "key": "alt+5", "command": "clipboard.paste", "when": "editorTextFocus", "args": { "slot": 5 } },
      { "key": "alt+6", "command": "clipboard.paste", "when": "editorTextFocus", "args": { "slot": 6 } },
      { "key": "alt+7", "command": "clipboard.paste", "when": "editorTextFocus", "args": { "slot": 7 } },
      { "key": "alt+8", "command": "clipboard.paste", "when": "editorTextFocus", "args": { "slot": 8 } },
      { "key": "alt+9", "command": "clipboard.paste", "when": "editorTextFocus", "args": { "slot": 9 } },
      { "key": "ctrl+c", "command": "clipboard.copyAndSave", "when": "editorTextFocus" }
    ],
    "configuration": {
      "type": "object",
      "title": "Clipboard Manager Settings",
      "properties": {
        "clipboardManager.autoCapture": {
          "type": "boolean",
          "default": true,
          "description": "Automatically capture normal clipboard copies (Ctrl+C) into history."
        }
      }
    }
  },
  "dependencies": {}
}
