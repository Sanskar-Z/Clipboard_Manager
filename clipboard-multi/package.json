{
  "name": "clipboard-multi",
  "displayName": "clipboard-multi",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:clipboardHistory",
    "onCommand:clipboardHistory.captureCopy"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "clipboard-history-container",
          "title": "Clipboard History",
          "icon": "$(clippy)"
        }
      ]
    },
    "views": {
      "clipboard-history-container": [
        {
          "id": "clipboardHistory",
          "name": "Clipboard History"
        }
        ,
        {
          "id": "clipboardSearch",
          "name": "Clipboard Search"
        }
      ]
    },
    "commands": [
      { "command": "clipboardHistory.refresh", "title": "Refresh Clipboard History", "icon": "$(refresh)" },
      { "command": "clipboardHistory.copy", "title": "Copy from Clipboard History", "icon": "$(copy)" },
      { "command": "clipboardHistory.add", "title": "Add item to history", "icon": "$(add)" },
      { "command": "clipboardHistory.delete", "title": "Delete item from history", "icon": "$(trash)" },
      { "command": "clipboardHistory.pin", "title": "Pin/Unpin item" },
      { "command": "clipboardHistory.undoDelete", "title": "Undo last delete" },
      { "command": "clipboardHistory.show", "title": "Show full history" },
      { "command": "clipboardHistory.search", "title": "Search history" },
      { "command": "clipboardHistory.openSearch", "title": "Open search view" },
      { "command": "clipboardHistory.copyMultiple", "title": "Copy multiple selected items" },
      { "command": "clipboardHistory.captureCopy", "title": "Capture Ctrl+C and add to history" },
      { "command": "clipboardHistory.paste", "title": "Paste from history item" }
    ],
    "keybindings": [
      { "command": "clipboard.copy0", "key": "ctrl+0", "when": "editorTextFocus" },
      { "command": "clipboard.paste0", "key": "alt+0", "when": "editorTextFocus" },
      { "command": "clipboard.copy1", "key": "ctrl+1", "when": "editorTextFocus" },
      { "command": "clipboard.paste1", "key": "alt+1", "when": "editorTextFocus" },
      { "command": "clipboard.copy2", "key": "ctrl+2", "when": "editorTextFocus" },
      { "command": "clipboard.paste2", "key": "alt+2", "when": "editorTextFocus" },
      { "command": "clipboard.copy3", "key": "ctrl+3", "when": "editorTextFocus" },
      { "command": "clipboard.paste3", "key": "alt+3", "when": "editorTextFocus" },
      { "command": "clipboard.copy4", "key": "ctrl+4", "when": "editorTextFocus" },
      { "command": "clipboard.paste4", "key": "alt+4", "when": "editorTextFocus" },
      { "command": "clipboard.copy5", "key": "ctrl+5", "when": "editorTextFocus" },
      { "command": "clipboard.paste5", "key": "alt+5", "when": "editorTextFocus" },
      { "command": "clipboard.copy6", "key": "ctrl+6", "when": "editorTextFocus" },
      { "command": "clipboard.paste6", "key": "alt+6", "when": "editorTextFocus" },
      { "command": "clipboard.copy7", "key": "ctrl+7", "when": "editorTextFocus" },
      { "command": "clipboard.paste7", "key": "alt+7", "when": "editorTextFocus" },
      { "command": "clipboard.copy8", "key": "ctrl+8", "when": "editorTextFocus" },
      { "command": "clipboard.paste8", "key": "alt+8", "when": "editorTextFocus" },
      { "command": "clipboard.copy9", "key": "ctrl+9", "when": "editorTextFocus" },
      { "command": "clipboard.paste9", "key": "alt+9", "when": "editorTextFocus" },
      { "command": "clipboardHistory.captureCopy", "key": "ctrl+c", "when": "editorTextFocus" },
      { "command": "clipboardHistory.copyMultiple", "key": "ctrl+c", "when": "view == clipboardSearch" }
    ]
    ,
    "menus": {
      "view/title": [
        {
          "command": "clipboardHistory.refresh",
          "when": "view == clipboardHistory",
          "group": "navigation"
        }
      ],
      "view/item/inline": [
        {
          "command": "clipboardHistory.copy",
          "when": "view == clipboardHistory",
          "group": "inline"
        },
        {
          "command": "clipboardHistory.pin",
          "when": "view == clipboardHistory",
          "group": "inline"
        },
        {
          "command": "clipboardHistory.delete",
          "when": "view == clipboardHistory",
          "group": "inline"
        }
      ],
      "view/item/context": [
        {
          "command": "clipboardHistory.copy",
          "when": "view == clipboardHistory && viewItem == historyItem",
          "group": "navigation"
        },
        {
          "command": "clipboardHistory.pin",
          "when": "view == clipboardHistory && viewItem == historyItem",
          "group": "navigation"
        },
        {
          "command": "clipboardHistory.delete",
          "when": "view == clipboardHistory && viewItem == historyItem",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.36.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}